@model IEnumerable<WebStore.DomainNew.DTO.ProductDTO>

@{
    ViewData["Title"] = "Список товаров";
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Order)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.SectionId)</th>
            <th>@Html.DisplayNameFor(model => model.BrandId)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(x => item.Id)</th>
                <th>@Html.DisplayFor(x => item.Name)</th>
                <th>@Html.DisplayFor(x => item.Order)</th>
                <th>@Html.DisplayFor(x => item.Price)</th>
                <th>@Html.DisplayFor(x => item.SectionId)</th>
                <th>@Html.DisplayFor(x => item.BrandId)</th>
                <th>@Html.DisplayFor(x => item.ImageUrl)</th>
                <th>
                    @Html.ActionLink("Edit", "Edit", new { })|
                    @Html.ActionLink("Details", "Details", new { })|
                    @Html.ActionLink("Delete", "Delete", new { })|
                </th>
            </tr>
        }
    </tbody>
</table>
