@model IEnumerable<WebStore.ViewModel.SectionViewModel>

<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-productsr-->
    @foreach (var parentSections in Model)
    {
        if (parentSections.ChildSections.Count > 0)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@parentSections.Name.ToLower()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @parentSections.Name
                        </a>
                    </h4>
                </div>
                <div id="@parentSections.Name.ToLower()" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (var childSection in parentSections.ChildSections)
                            {
                                <li><a asp-route-sectionId="@parentSections.Id">@childSection.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a asp-route-sectionId="@parentSections.Id">@parentSections.Name</a></h4>
                </div>
            </div>
        }
    }
</div><!--/category-products-->

