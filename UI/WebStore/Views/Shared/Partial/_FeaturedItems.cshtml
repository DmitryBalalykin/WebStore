@model IEnumerable<WebStore.ViewModel.ProductViewModel>

@{
    var is_brand = Context.Request.Query.ContainsKey("BrandId");
}

<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    @if (is_brand)
                    {
                        <div class="productinfo text-center">
                            <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id" asp-route-FromBrand="true">
                                <img src="~/images/shop/@item.ImageUrl" alt="" />
                                <h2>@item.Price.ToString(format: "C")</h2>
                                <p>@item.Name</p>
                            </a>
                            <a @*asp-controller="Cart"
                                   asp-action="AddToCart"
                                   asp-route-id="@item.Id"
                                   asp-route-returnUrl="@Context.Request.Path"
                                   class="btn btn-default add-to-cart"*@
                               href="#"
                               data-id="@item.Id"
                               class="btn btn-fefault add-to-cart CallAddToCart"><i class="fa fa-shopping-cart"></i>Добавить в корзину</a>
                        </div>
                    }
                    else
                    {
                        <div class="productinfo text-center">
                            <a asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@item.Id">
                                <img src="~/images/shop/@item.ImageUrl" alt="" />
                                <h2>@item.Price.ToString(format: "C")</h2>
                                <p>@item.Name</p>
                            </a>
                            <a @*asp-controller="Cart"
                               asp-action="AddToCart"
                               asp-route-id="@item.Id"
                               asp-route-returnUrl="@Context.Request.Path"
                               class="btn btn-default add-to-cart"*@
                               
                               href="#"
                               data-id="@item.Id"
                               class="btn btn-fefault add-to-cart CallAddToCart"><i class="fa fa-shopping-cart"></i>Добавить в корзину</a>
                        </div>
                    }
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href=""><i class="fa fa-plus-square"></i>Добавить в список желаний</a></li>
                        <li><a href=""><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }

    <div class="col-sm-4">
        <ul class="pagination">
            <li class="active"><a href="">1</a></li>
            <li><a href="">2</a></li>
            <li><a href="">3</a></li>
            <li><a href="">&raquo;</a></li>
        </ul>
    </div>
</div><!--features_items-->