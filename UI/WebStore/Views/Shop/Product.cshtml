@model  WebStore.ViewModel.CatalogViewModel
@{
    ViewData["Title"] = "Товары";

}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSidebar")
            </div>
            <div class="col-sm-9 padding-right">
                <div id="itemsContainer">
                @await Html.PartialAsync("Partial/_FeaturedItems", Model.Products)
                </div>

                <paging
                        page-view-model="@Model.PageViewModel"
                        page-action="Product"
                        page-url-SectionId="@Model.SectionId"
                        page-url-BrandId="@Model.BrandId">
                </paging>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery-loading-overlay/loadingoverlay.min.js"></script>
<script src="~/js/Shop/ProductItems.js" asp-append-version="true"></script>
<script>
    $(function () {
        ProductItems.init({
            getUrl: "@Url.Action("GetFiltredItems","Shop")"
        });
    });
</script>