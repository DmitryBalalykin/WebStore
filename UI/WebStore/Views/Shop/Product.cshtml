@model  WebStore.ViewModel.CatalogViewModel
@{
    ViewData["Title"] = "Товары";

}

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync(partialViewName: "Partial/_LeftSidebar")
            </div>
            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/_FeaturedItems", Model.Products)
            </div>
        </div>
    </div>
</section>
